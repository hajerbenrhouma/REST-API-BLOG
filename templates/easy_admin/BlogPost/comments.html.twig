<table class="table table-striped table-bordered">
    <thead>
    <th>#</th>
    <th>Author</th>
    <th>Content</th>
    </thead>
    <tbody>
    {% for comment in value %}
        <tr>
            <td>{{ comment.id }}</td>
            <td>{{ comment.author }}</td>
            <td>{{ comment.content }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>